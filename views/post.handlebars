{{#if edit_post}}
<h3>Edit Post</h3>
<div>
  <form class="form edit-post-form">
    <div class="form-group">
      <label for="post-title">Title</label>
      <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
    </div>
    <div class="form-group">
      <label for="post-content">Content</label>
      <textarea class="form-input" id="post-content" name="post-content">{{content}}</textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update Post</button>
      <button type="submit" class="btn btn-primary">Delete</button>
    </div>
  </form>
</div>
{{else}}
<h3>Create New Post</h3>
<div>
  <form class="form new-post-form">
    <div class="form-group">
      <label for="post-title">Title</label>
      <input class="form-input" type="text" id="post-title" name="post-title" />
    </div>
    <div class="form-group">
      <label for="post-content">Content</label>
      <textarea class="form-input" id="post-content" name="post-content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>
{{/if}}

<script src="./js/post.js"></script>